<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="editor"/>
    <head>
        <link src="Straker_EasyTranslationPlatform::test.js"/>
    </head>
    <body>
        <referenceContainer name="content">
            <block class="Straker\EasyTranslationPlatform\Block\Adminhtml\Job\Edit" name="easytranslationplatform_job_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Straker\EasyTranslationPlatform\Block\Adminhtml\Job\Edit\Tabs" name="easytranslationplatform_job_edit_tabs">
                <action method="addTab">
                    <argument name="name" xsi:type="string">attachment_products</argument>
                    <argument name="block" xsi:type="array">
                        <item name="label" xsi:type="string">Select Products</item>
                        <item name="title" xsi:type="string">Select Products</item>
                        <item name="url" xsi:type="helper" helper="Straker\EasyTranslationPlatform\Helper\Data::getEasyTranslationPlatformUrl"></item>
                        <item name="class" xsi:type="string">ajax</item>
                    </argument>
                </action>
                <block class="Straker\EasyTranslationPlatform\Block\Adminhtml\Job\Edit\Tab\Attributes"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">attribute_section</argument>
                        <argument name="block" xsi:type="array">
                        <item name="label" xsi:type="string">Select Attributes</item>
                        <item name="title" xsi:type="string">Select Attributes</item>
                        </argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
