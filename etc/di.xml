<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../lib/internal/Magento/Framework/ObjectManager/etc/config.xsd">


    <preference for="Straker\EasyTranslationPlatform\Api\Data\EasyTranslationPlatformInterface" type="Straker\EasyTranslationPlatform\Model\EasyTranslationPlatform"/>
    <preference for="Straker\EasyTranslationPlatform\Api\Data\RegistrationInterface" type="Straker\EasyTranslationPlatform\Model\Registration"/>
    <preference for="Straker\EasyTranslationPlatform\Api\Data\StrakerAPIInterface" type="Straker\EasyTranslationPlatform\Model\StrakerAPI"/>

    <type name="Straker\EasyTranslationPlatform\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Straker\EasyTranslationPlatform\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">myLoggerName</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">Straker\EasyTranslationPlatform\Logger\Handler</item>
            </argument>
        </arguments>
    </type>

</config>
