            <argument name="collections" xsi:type="array">
                <item name="easytranslationplatform_post_listing_data_source" xsi:type="string">Straker\EasyTranslationPlatform\Model\ResourceModel\Post\Grid\Collection</item>
            </argument>
        </arguments>
    </type>

    <type name="Straker\EasyTranslationPlatform\Logger\Handler">
