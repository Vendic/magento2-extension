        </arguments>
    </virtualType>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="easytranslationplatform_job_listing_data_source" xsi:type="string">Straker\EasyTranslationPlatform\Model\ResourceModel\Job\Grid\Collection</item>
